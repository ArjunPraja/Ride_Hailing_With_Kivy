WindowManager:
    LoginScreen:
    RegisterScreen:
    HomeScreen:

<LoginScreen>:
    name: "login"
    MDBoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        padding: "40dp"
        MDLabel:
            text: "Welcome Back üöñ"
            halign: "center"
            font_style: "H4"
        MDTextField:
            hint_text: "Email"
            icon_right: "email"
        MDTextField:
            hint_text: "Password"
            password: True
            icon_right: "eye"
        MDRaisedButton:
            text: "Login"
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = "home"
        MDFlatButton:
            text: "Don't have an account? Register"
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = "register"

<RegisterScreen>:
    name: "register"
    MDBoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        padding: "40dp"
        MDLabel:
            text: "Create Account üìù"
            halign: "center"
            font_style: "H4"
        MDTextField:
            hint_text: "Full Name"
            icon_right: "account"
        MDTextField:
            hint_text: "Email"
            icon_right: "email"
        MDTextField:
            hint_text: "Password"
            password: True
            icon_right: "lock"
        MDRaisedButton:
            text: "Register"
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = "home"
        MDFlatButton:
            text: "Already have an account? Login"
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = "login"

<HomeScreen>:
    name: "home"
    MDBoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        padding: "40dp"
        MDLabel:
            text: "üöÄ Welcome to Ride Hailing App!"
            halign: "center"
            font_style: "H4"
        MDRaisedButton:
            text: "Book a Ride"
            pos_hint: {"center_x": 0.5}
        MDRaisedButton:
            text: "Logout"
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = "login"
