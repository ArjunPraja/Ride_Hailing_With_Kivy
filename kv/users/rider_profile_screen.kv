<RiderProfileScreen>:
    name: "rider_profile"
    
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        padding: dp(20)
        md_bg_color: 0.95, 0.95, 0.95, 1
        
        MDLabel:
            text: " Rider Profile"
            halign: "center"
            font_style: "H4"
            bold: True
            size_hint_y: None
            height: dp(60)
        
        # Circular Profile Image Container
        MDCard:
            size_hint: None, None
            size: dp(200), dp(200)
            pos_hint: {"center_x": 0.5}
            elevation: 3
            radius: [dp(100), dp(100), dp(100), dp(100)]
            md_bg_color: 1, 1, 1, 1
            
            FitImage:
                id: profile_img
                source: root.profile_image if root.profile_image else "assets/OIP.jpg"
                radius: [dp(100), dp(100), dp(100), dp(100)]
                size_hint: 1, 1
        
        MDRectangleFlatButton:
            text: "Upload Image"
            size_hint: (0.6, None)
            height: dp(50)
            pos_hint: {"center_x": 0.5}
            on_release: root.select_image()
        
        Widget:
            size_hint_y: None
            height: dp(20)
        
        # User Information Card
        MDCard:
            orientation: "vertical"
            padding: dp(20)
            spacing: dp(15)
            size_hint: (0.9, None)
            height: self.minimum_height
            pos_hint: {"center_x": 0.5}
            elevation: 2
            
            MDLabel:
                text: f"Name: {root.user_name}"
                halign: "left"
                font_style: "H6"
                size_hint_y: None
                height: dp(40)
            
            MDSeparator:
                height: dp(1)
            
            MDLabel:
                text: f"Email: {root.user_email}"
                halign: "left"
                font_style: "H6"
                size_hint_y: None
                height: dp(40)
            
            MDSeparator:
                height: dp(1)
            
            MDLabel:
                text: f"Phone: {root.user_phone}"
                halign: "left"
                font_style: "H6"
                size_hint_y: None
                height: dp(40)
        
        Widget:
            size_hint_y: None
            height: dp(30)
        
        MDRectangleFlatButton:
            text: "Back"
            size_hint: (0.6, None)
            height: dp(50)
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = "user_menu"