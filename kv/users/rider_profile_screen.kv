<RiderProfileScreen>:
    name: "rider_profile"
    
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(20)
        padding: dp(20)
        md_bg_color: 0.95, 0.95, 0.95, 1
        
        MDLabel:
            text: "ðŸ‘¤ Rider Profile"
            halign: "center"
            font_style: "H4"
            bold: True
        
        FitImage:
            id: profile_img
            source: root.profile_image if root.profile_image else "assets/OIP.jpg"
            size_hint: (0.5, 0.5)
            pos_hint: {"center_x": 0.5}
            radius: [dp(150), dp(150), dp(150), dp(150)]  # Circular
        
        MDRectangleFlatButton:
            text: "Upload Image"
            size_hint: (0.6, None)
            height: dp(50)
            pos_hint: {"center_x": 0.5}
            on_release: root.select_image()
        
        MDCard:
            orientation: "vertical"
            padding: dp(10)
            spacing: dp(10)
            size_hint: (0.9, None)
            height: self.minimum_height
            pos_hint: {"center_x": 0.5}
            
            MDLabel:
                text: f"Name: {root.user_name}"
                halign: "left"
                font_style: "H6"
            
            MDLabel:
                text: f"Email: {root.user_email}"
                halign: "left"
                font_style: "H6"
            
            MDLabel:
                text: f"Phone: {root.user_phone}"
                halign: "left"
                font_style: "H6"
        
        Widget:
        
        MDRectangleFlatButton:
            text: "Back"
            size_hint: (0.6, None)
            height: dp(50)
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = "user_menu"
