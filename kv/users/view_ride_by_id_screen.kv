<ViewRideByIdScreen>:
    name: "view_ride_by_id"

    MDBoxLayout:
        orientation: "vertical"
        spacing: "15dp"
        padding: "20dp"

        MDLabel:
            text: "All Your Requested Rides"
            halign: "center"
            font_style: "H5"
            size_hint_y: None
            height: self.texture_size[1] + dp(20)

        ScrollView:
            size_hint_y: 1  # Take remaining vertical space
            MDBoxLayout:
                id: ride_details_box
                orientation: "vertical"
                adaptive_height: True
                spacing: "10dp"
                padding: "10dp"

        MDRaisedButton:
            text: "â¬… Back"
            md_bg_color: 1, 0, 0, 1
            size_hint_y: None
            height: "50dp"
            on_release: app.root.current = "user_menu"
