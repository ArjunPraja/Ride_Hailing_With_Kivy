<DriverMenuScreen>:
    name: "driver_menu"

    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: 0.95, 0.95, 0.95, 1   # light gray background

        MDLabel:
            text: "Driver Dashboard"
            halign: "center"
            font_style: "H4"
            bold: True
            size_hint_y: None
            height: self.texture_size[1] + dp(20)
            padding_y: dp(15)

        ScrollView:   # Makes screen scrollable on small devices
            MDBoxLayout:
                orientation: "vertical"
                spacing: "15dp"
                padding: "20dp"
                size_hint_y: None
                height: self.minimum_height

                MDRectangleFlatButton:
                    text: "View Ride Requests"
                    font_size: "16sp"
                    size_hint: (0.8, None)
                    height: dp(48)
                    pos_hint: {"center_x": 0.5}
                    on_release: app.root.current = "show_rides"
                     

                MDRectangleFlatButton:
                    text: "View My Rides"
                    font_size: "16sp"
                    size_hint: (0.8, None)
                    height: dp(48)
                    pos_hint: {"center_x": 0.5}
                    on_release: root.view_my_rides()

                MDRectangleFlatButton:
                    text: "View Ride by ID"
                    font_size: "16sp"
                    size_hint: (0.8, None)
                    height: dp(48)
                    pos_hint: {"center_x": 0.5}
                    on_release: root.view_ride_by_id()

                MDRectangleFlatButton:
                    text: "Accept Ride"
                    font_size: "16sp"
                    size_hint: (0.8, None)
                    height: dp(48)
                    pos_hint: {"center_x": 0.5}
                    on_release: root.accept_ride()

                MDRectangleFlatButton:
                    text: "Start Ride"
                    font_size: "16sp"
                    size_hint: (0.8, None)
                    height: dp(48)
                    pos_hint: {"center_x": 0.5}
                    on_release: root.start_ride()

                MDRectangleFlatButton:
                    text: "Add Vehicle"
                    font_size: "16sp"
                    size_hint: (0.8, None)
                    height: dp(48)
                    pos_hint: {"center_x": 0.5}
                    on_release: app.root.current = "add_vehicle"

                MDRectangleFlatButton:
                    text: "View My Vehicles"
                    font_size: "16sp"
                    size_hint: (0.8, None)
                    height: dp(48)
                    pos_hint: {"center_x": 0.5}
                    on_release: app.root.current = "view_update_vehicle"
                     

             
                MDRectangleFlatButton:
                    text: "Profile"
                    font_size: "16sp"
                    size_hint: (0.8, None)
                    height: dp(48)
                    pos_hint: {"center_x": 0.5}
                    on_release: app.root.current = "driver_profile"
               

                MDRectangleFlatButton:
                    text: "Logout"
                    font_size: "16sp"
                    size_hint: (0.8, None)
                    height: dp(48)
                    pos_hint: {"center_x": 0.5}
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    line_color: 1, 0, 0, 1
                    md_bg_color: 1, 0, 0, 1
                    on_release: root.logout()
