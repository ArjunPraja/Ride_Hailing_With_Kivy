<HomeScreen>:
    name: "home"

    FloatLayout:
        # Background Image full window cover
        AsyncImage:
            source: "https://images.unsplash.com/photo-1507525428034-b723cf961d3e?auto=format&fit=crop&w=800&q=80"
            allow_stretch: True      # stretch kare window ke size ke according
            keep_ratio: False        # aspect ratio ignore kare
            size: self.parent.size   # parent ka size follow kare
            pos: self.parent.pos     # par
        # Center Box
        MDBoxLayout:
            orientation: "vertical"
            spacing: 20
            padding: 1
            size_hint: 0.8, 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDLabel:
                text: "Welcome To Ride Hailing App! ðŸš–"
                halign: "center"
                font_style: "H4"
                theme_text_color: "Primary"

            MDLabel:
                text: "Book your ride easily and travel in style!"
                halign: "center"
                font_style: "H6"
                theme_text_color: "Secondary"

            MDRaisedButton:
                text: "Login/Register"
                pos_hint: {"center_x": 0.5}
                on_release: root.manager.current = "login"
