<AddVehicleScreen>:
    name: "add_vehicle"

    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1
            Rectangle:
                pos: self.pos
                size: self.size

        ScrollView:
            size_hint: 1, 1
            do_scroll_x: False

            MDBoxLayout:
                orientation: "vertical"
                padding: [30, 100, 30, 30]
                spacing: 20
                size_hint_y: None
                height: self.minimum_height

                MDCard:
                    orientation: "vertical"
                    padding: 30
                    spacing: 15
                    size_hint_x: 0.9
                    size_hint_y: None
                    height: self.minimum_height
                    pos_hint: {"center_x": 0.5}
                    md_bg_color: 1, 1, 1, 1
                    elevation: 0  # flat card, no shadow

                    MDLabel:
                        text: "Add Vehicle Details"
                        halign: "center"
                        font_style: "H5"

                    MDTextField:
                        id: brand_input
                        hint_text: "Brand"
                        mode: "rectangle"

                    MDTextField:
                        id: model_input
                        hint_text: "Model"
                        mode: "rectangle"

                    MDTextField:
                        id: year_input
                        hint_text: "Year"
                        mode: "rectangle"
                        input_filter: "int"

                    MDTextField:
                        id: plate_input
                        hint_text: "Plate Number"
                        mode: "rectangle"

                    MDTextField:
                        id: color_input
                        hint_text: "Color"
                        mode: "rectangle"

                    MDRaisedButton:
                        text: "Add Vehicle"
                        elevation: 0
                        md_bg_color: 0.2, 0.6, 0.9, 1
                        pos_hint: {"center_x": 0.5}
                        on_release: root.add_vehicle()

                    MDRaisedButton:
                        text: "Back"
                        elevation: 0
                        md_bg_color: 0.8, 0.2, 0.2, 1
                        pos_hint: {"center_x": 0.5}
                        on_release: root.manager.current = "driver_menu"
