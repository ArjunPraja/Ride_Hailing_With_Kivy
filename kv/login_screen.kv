
<LoginScreen>:
    name: "login"
    MDBoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        padding: "40dp"
        MDLabel:
            text: "Welcome Back ðŸš–"
            halign: "center"
            font_style: "H4"
        MDTextField:
            hint_text: "Email"
            icon_right: "email"
        MDTextField:
